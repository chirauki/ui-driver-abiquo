<section class="horizontal-form">
  <div class="container-fluid">
    {{!-- This partial contains the quantity, name, and description fields --}}
    {{partial "host/add-common"}}

    <div class="over-hr r-mt20 r-mb20">
      <span>API</span>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Abiquo API URL</label>
      </div>
      <div class="col-sm-8 col-md-8">
        {{input type="text"
          class="form-control"
          placeholder="eg. https://some.domain.com/api"
          value=model.%%DRIVERNAME%%Config.ApiURL
        }}
      </div>
      <div class="col-sm-1 col-md-1 form-label">
        <label class="form-control-static">Insecure</label>
      </div>
      <div class="col-sm-1 col-md-1">
        {{input type="checkbox"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.Insecure
        }}
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>API Access. Use either OAuth or Basic Auth.</span>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">App Key</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.AppKey
        }}
      </div>
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Username</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.ApiUser
        }}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">App Secret</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.AppSecret
        }}
      </div>
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Password</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="password"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.ApiPass
        }}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Access Token</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.AccessToken
        }}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Access Token secret</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.AccessTokenSecret
        }}
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>Compute</span>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Virtual Datacenter</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.VirtualDatacenter
        }}
      </div>
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Virtual Appliance</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.VirtualAppliance
        }}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Template name</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.TemplateName
        }}
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">CPUs</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.Cpus
        }}
      </div>
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Hardware Profile</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          placeholder="eg. t2.micro"
          value=model.%%DRIVERNAME%%Config.HardwareProfile
        }}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">RAM</label>
      </div>
      <div class="col-sm-4 col-md-4">
        <div class="input-group">
          {{input type="text"
            class="form-control"
            value=model.%%DRIVERNAME%%Config.Ram
          }}
          <span class="input-group-addon">MB</span>
        </div>
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>Network</span>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Network name</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          placeholder="Leave blank to use VDC default"
          value=model.%%DRIVERNAME%%Config.NetworkName
        }}
      </div>
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Allocate public IP?</label>
      </div>
      <div class="col-sm-1 col-md-1">
        {{input type="checkbox"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.PublicIp
        }}
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>Instance details</span>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">SSH username</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.SSHUser
        }}
      </div>
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">SSH key filename</label>
      </div>
      <div class="col-sm-4 col-md-4">
        {{input type="text"
          class="form-control"
          placeholder="Leave empty to auto generate an SSH key"
          value=model.%%DRIVERNAME%%Config.SSHKeyPath
        }}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-md-2 form-label">
        <label class="form-control-static">Optional user data</label>
      </div>
      <div class="col-sm-10 col-md-10">
        {{textarea
          placeholder="Paste user data here"
          rows="10"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.UserData
        }}
      </div>
    </div>

    {{!-- This partial contains the Labels and Advanced Options fields --}}
    {{partial "host/add-options"}}
  </div>

  {{!-- This component shows errors produced by validate() in the component --}}
  {{top-errors errors=errors}}

  {{!-- This component shows the Create and Cancel buttons --}}
  {{save-cancel save="save" cancel="cancel"}}
</section>
